<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8sp">


    <ImageView
        android:id="@+id/iv_cake_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/cake_image"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:contentDescription="Cake Image"
        tools:srcCompat="@drawable/cheesecake" />


    <TextView
        android:id="@+id/tv_cake_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#33000000"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/cakename"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cake_card"
        app:layout_constraintEnd_toEndOf="@+id/iv_cake_card"
        app:layout_constraintStart_toStartOf="@+id/iv_cake_card" />
</androidx.constraintlayout.widget.ConstraintLayout>